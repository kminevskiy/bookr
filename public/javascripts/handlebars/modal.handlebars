<div id="edit-modal">
  <h1>Edit Book</h1>
  <img class="close" src="/images/close.svg" alt="close icon">
  <form action="/books/{{id}}" method="put">
    <fieldset id="main-form">
      <input type="hidden" name="id" value="{{id}}">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" value="{{title}}">
      <label for="author">Author</label>
      <input type="text" name="author" id="author" value="{{author}}">
      <label for="isbn">ISBN</label>
      <input type="number" name="isbn" id="isbn" value="{{isbn}}">
      <label for="rating">Rating</label>
      <select name="rating">
        <option value="Horrible">Horrible</option>
        <option value="Bad">Bad</option>
        <option value="Okay">Okay</option>
        <option value="Good">Good</option>
        <option value="Excellent">Excellent</option>
      </select>
      <label for="summary">Summary</label>
      <textarea name="summary" id="summary">{{summary}}</textarea>
      <label for="idea1">Key Idea #1</label>
      <textarea name="idea1" id="idea1">{{idea1}}</textarea>
      <label for="idea2">Key Idea #2</label>
      <textarea name="idea2" id="idea2">{{idea2}}</textarea>
      <label for="idea3">Key Idea #3</label>
      <textarea name="idea3" id="idea3">{{idea3}}</textarea>
    </fieldset>
    <fieldset id="action-form">
      <input type="submit" value="Update book" class="update">
    </fieldset>
  </form>
</div>
<div id="overlay"></div>
