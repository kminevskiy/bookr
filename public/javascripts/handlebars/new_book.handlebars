<h1>Your Reading List Expands...</h1>
<form action="/books" method="post">
  <fieldset id="main-form">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" placeholder="Some Awesome Book">
    <label for="author">Author</label>
    <input type="text" name="author" id="author" placeholder="By Some Amazing Author">
    <label for="isbn">ISBN</label>
    <input type="number" name="isbn" id="isbn" placeholder="Identified by ISBN">
    <div id="error-message"></div>
    <label for="summary">Summary</label>
    <textarea name="summary" id="summary" placeholder="A Few Words About It"></textarea>
    <label for="idea1">Key Idea #1</label>
    <textarea name="idea1" id="idea1" placeholder="Key idea #1"></textarea>
    <label for="idea2">Key Idea #2</label>
    <textarea name="idea2" id="idea2" placeholder="Key idea #2"></textarea>
    <label for="idea3">Key Idea #3</label>
    <textarea name="idea3" id="idea3" placeholder="Key idea #3"></textarea>
  </fieldset>
  <fieldset id="action-form">
    <input class="new-submit" type="submit" value="Submit">
    <input class="new-reset" type="button" value="Reset">
  </fieldset>
</form>
